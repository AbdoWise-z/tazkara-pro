generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  Administrator
  Manager
  Fan
}

model User {
  id        String    @id @default(uuid()) @map("_id")
  clerk_id  String    @unique
  firstName String?
  lastName  String?
  BirthDate DateTime?
  Gender    Boolean?
  City      String?
  Address   String?

  EmailAddress String
  Role         Role
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  Reservations          Reservation[]
  authorizationRequests AuthorizationRequest[]
}

model Stadium {
  id          String  @id @default(uuid()) @map("_id")
  name        String
  rowCount    Int
  columnCount Int
  Match       Match[]
}

model Reservation {
  id           String @id @default(uuid()) @map("_id")
  ticketNumber String
  seatIndex    Int

  match   Match  @relation(fields: [matchId], references: [id])
  matchId String

  user   User   @relation(fields: [userId], references: [id])
  userId String
}

model Match {
  id       String @id @default(uuid()) @map("_id")
  homeTeam String
  awayTeam String

  date      DateTime
  stadium   Stadium  @relation(fields: [stadiumId], references: [id])
  stadiumId String

  mainReferee  String
  linesMen     String[]
  Reservations Reservation[]
}

model AuthorizationRequest {
  id     String @id @default(uuid()) @map("_id")
  userId String
  user   User   @relation(fields: [userId], references: [id])
}
